{
  "name": "build",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass ../public/resources/scss/style.scss ../public/style.css",
    "build:tailwind": "tailwindcss -i ../public/resources/main.css -o ../public/tailwind.css --config ../build/tailwind.config.js --cwd ../build",
    "build": "npm run build:sass && npm run build:tailwind",

    "watch:sass": "sass --watch ../public/resources/scss/style.scss:../public/style.css",
    "watch:tailwind": "tailwindcss -i ../public/resources/main.css -o ../public/tailwind.css --config ../build/tailwind.config.js --watch --cwd ../build",
    "watch": "concurrently \"npm run watch:sass\" \"npm run watch:tailwind\"",

    "readonly": "chmod 444 ../public/style.css ../public/tailwind.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "sass": "^1.86.3",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
