{
  "name": "build",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "build": "npm run build:sass && npm run build:tailwind",
    "watch": "concurrently \"npm run watch:sass\" \"npm run watch:tailwind\"",

    "build:sass": "sass public/resources/main.scss public/build/main.css",
    "build:tailwind": "npx @tailwindcss/cli -i public/resources/tailwind.css -o public/build/tailwind.css",

    "watch:sass": "sass --watch public/resources/main.scss:public/build/main.css",
    "watch:tailwind": "npx @tailwindcss/cli -w -i public/resources/tailwind.css -o public/build/tailwind.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.3",
    "sass": "^1.86.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3"
  }
}
